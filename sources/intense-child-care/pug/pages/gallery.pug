    center: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
  }, [{
    location: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.',
    description: '9870 St Vincent Place, Glasgow'
  }]).section

  // Page Footer
  include ../sections/_section-footer-default


