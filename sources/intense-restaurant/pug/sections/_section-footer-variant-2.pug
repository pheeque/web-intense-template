include ../elements/_widget-form-contact
include ../elements/_widget-list-social
include ../elements/_ui-quote-simple-slider

// Default footer
footer.section-relative.section-top-66.section-bottom-34.page-footer.bg-gray-base.context-dark
  .container
    .row.justify-content-md-center.text-xl-left
      .col-md-12
        .row.justify-content-sm-center
          .col-sm-10.col-md-6.text-sm-left.col-lg-6.col-xl-4.order-xl-3.order-lg-2.offset-xxl-1
            h6.text-uppercase.text-spacing-60.text-center.text-lg-left Contact us

            +widget-form-contact()


          .col-sm-12.offset-top-66.col-xl-3.order-xl-1.offset-xl-top-0.order-lg-3
            // Footer brand
            .footer-brand
              a(href="index.html")!= cfg.brand.logo
            p.text-darker.offset-top-4!= cfg.brand.slogan

            address.contact-info.offset-top-30.p
              div
                dl
                  dt.text-white Address:
                  dd.text-dark.d-xl-block 28 Jackson Blvd Ste #[span.d-xl-block 1020 Chicago] #[span.d-xl-block IL 60604-2340.]

              div
                dl.offset-top-0
                  dt.text-white Telephone:
                  dd.text-dark
                    a(href='tel:#') +1 800 559 6580
              div
                dl.offset-top-0
                  dt.text-white E-mail:
                  dd.text-dark
                    a(href='mailto:#') mail@demolink.org

          .col-sm-10.col-md-6.offset-top-66.offset-lg-top-0.text-sm-left.col-lg-6.col-xl-4.order-xl-2.order-lg-1
            h6.text-uppercase.text-spacing-60.text-center.text-lg-left What people say
            +quote-simple-slider(
              [{
                "title": "Alex Merphy",
                "q": "This is one of the best restaurants I have visited. Everything was excellent. The food was served in a  very creative way. Would recommend to all."
              },
              {
                "title": "July Mao",
                "q": "Your Restaurant is the best family place for me. It is already a tradition for us to visit this place every Friday evening. I really enjoy everything."
              },
              {
                "title": "John Doe",
                "q": "This is where I go every time I feel overwhelmed with nostalgia or just want to taste the real pasta one more time. Highly recommend."
              }
            ], "text-white")

            .offset-top-34.text-sm-center.text-lg-left
              +widget-list-social([
                {
                  "icon": "fa fa-facebook",
                  "href": "#"
                },
                {
                  "icon": "fa fa-twitter",
                  "href": "#"
                },
                {
                  "icon": "fa fa-google-plus",
                  "href": "#"
                },
                {
                  "icon": "fa fa-linkedin",
                  "href": "#"
                }
              ])



  .container.offset-top-50
    p.small.text-darker
      | #{cfg.brand.name} &copy; #[span(id="copyright-year")] . #[a(href="privacy.html") Privacy Policy]
      | . Design&nbsp;by&nbsp;#[a(href="https://zemez.io/") Zemez]
