//- Includes
include ../elements/_widget-rd-calendar
include ../elements/_widget-event
include ../elements/_widget-flickrfeed

// Section Blog Events
aside.text-left
  .row
    .col-md-6.col-lg-12.offset-md-top-41.offset-lg-top-0
      // RD calendar
      +widget-rd-calendar([
        {
          "date": "07/12/2018",
          "time": "8:00 AM",
          "title": "St. Valentine's Day Dinner",
          "link": "#"
        },
        {
          "date": "08/13/2018",
          "time": "9:00 AM",
          "title": "Halloween Dinner",
          "link": "#"
        }
      ])

    // Recent Events
    .col-md-6.col-lg-12.offset-top-41
      h6.text-uppercase.text-spacing-60 Recent Events
      div.text-subline
      .offset-top-34
        +widget-event("#", "January 1 2018", "9:00 PM", "New Year 2018 Party", null)
      .offset-top-30
        +widget-event("#", "January 7 2018", "9:00 PM", "Christmas party ideas", null)
      .offset-top-30
        +widget-event("#", "January 28 2018", "9:00 PM", "St. Patrick's Day Celebration", null)

  // Flickr Feed
  h6.offset-top-41.text-uppercase.text-spacing-60 Flickr Feed
  div.text-subline
  .offset-top-34
    +widget-flickrfeed("tm58888_landscapes", {"data-image_q": "src"}, 9)
