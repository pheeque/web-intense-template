//- Event Widget
//- url - expanded post link
//- date - date of publishment
//- title - post title
//- image - post image
mixin widget-event(url, date, time, title, image, aClass)
  // Event Widget
  article.post.widget-event.text-left(class= aClass)
    a(href=url)
      div.unit.flex-row.unit-spacing-xs.align-items-center
        if image
          .unit-left
            img.rounded-circle(width=image.w, height=image.h, src=image.src, alt=image.alt)
        .unit-body
          .post-meta
            ul.list-inline.list-inline-sm.text-darker
              li.list-inline-item
                span.icon-xxs.mdi.mdi-calendar
                time(datetime="2018-01-01")= date
              li.list-inline-item
                span.icon-xxs.mdi.mdi-clock
                time(datetime="2018-01-01")= time
          .post-title
            h6.text-regular= title
