extends  ../_skeleton

include ../elements/_ui-material-parallax
include ../elements/_ui-isotope
include ../elements/_ui-thumbnail-classic
include ../elements/_ui-box-pricing-type-1

//-Title
block title
  title= cfg.nav.gallery.title

//- Page
block page

  // Page Head
  header.page-head.slider-menu-position
    //- RD Navbar
    +rd-navbar-default(
    'rd-navbar-default rd-navbar-transparent',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.gallery,
    cfg.nav
    )

  // Page Contents
  main.page-content
    // Section Intro
    section.context-dark
      +material-parallax({ img: 'images/intro-01-1920x955.jpg' })
        .container
          .section-110.row.justify-content-sm-center.align-items-sm-center
            .col-lg-8
              img(src='images/intro-logo-175x173.png' alt="" width=175 height=173)

              h1.font-accent
                span.big= cfg.nav.gallery.title

              ul.list-inline.list-inline-dashed.p
                li.list-inline-item
                  a(href=cfg.nav.home.href)= cfg.nav.home.title
                li.list-inline-item
                  = cfg.nav.gallery.title

    // Section Menu
    section.section-98.section-110
      .container
        +isotope(["All", "Restaurant space", "Delicious Food", "Our Team", "Happy Clients"],{
          "group": "gallery",
          "layout": "masonry",
          "alignClass": "isotope-filters-vertical"
        }, "isotope-2")
          .row( data-lightgallery='group' )
            .col-12.col-md-6.col-lg-4.isotope-item(data-filter="*")
              +thumbnail-classic({
