extends  ../_skeleton

//- Includes
include ../elements/_ui-rd-navbar-default-transparent-center

//- Title
block title
	title Gifter Card 4
 
//- Page
block page
	// Page Head
	section.slider-menu-position.bg-gefault.context-dark.section-card-4
		+rd-navbar-default-center(
		'rd-navbar-default rd-atata rd-navbar-transparent rd-navbar-dark navbar-center',
		{
			"data-lg-auto-height": "true",
			"data-md-layout": 'rd-navbar-fixed',
			"data-lg-layout": 'rd-navbar-static',
			"data-lg-stick-up": 'true'
		},
		cfg.brand.logoWhite,
		cfg.nav.features,
		cfg.nav
		)

		.block-animation
			.layer-1
				.layer(data-depth="0.35")
					img(src="images/parallax-img-1.png",  alt="")
			.layer-2
				.layer(data-depth="-0.35")
					img(src="images/parallax-img-2.png",  alt="")
			.layer-4
				.layer(data-depth="-0.1")
					img(src="images/parallax-img-4.png",  alt="")
			.layer-5
				.layer(data-depth="0.12")
					img(src="images/parallax-img-5.png",  alt="")
			.layer-6
				.layer(data-depth="-0.1")
					img(src="images/parallax-img-4.png",  alt="")
			.layer-7
				.layer(data-depth="0.12")
					img(src="images/parallax-img-5.png",  alt="")
		.container
			.row.section-cover.section-110.align-items-center.justify-content-center
				
				.box-image-parallax
					.parallax-scene.parallax-scene-js(data-scalar-x="5" data-scalar-y="10")
						.layer-1
							.layer.image-parallax(data-depth="0.35")
								img(src="images/card-1-user-1.jpg",  alt="")
						.layer-2
							.layer.image-parallax(data-depth="-0.35")
								img(src="images/card-1-user-2.jpg",  alt="")
						.layer-3
							.layer.image-parallax(data-depth="-0.2")
								img(src="images/card-1-user-3.jpg",  alt="")
						.layer-4
							.layer.image-parallax(data-depth="-0.1")
								img(src="images/card-1-user-4.jpg",  alt="")
						.layer-5
							.layer.image-parallax(data-depth="0.12")
								img(src="images/card-1-user-5.jpg",  alt="")
						.layer-6
							.layer.image-parallax(data-depth="0.3")
								img(src="images/card-1-user-6.jpg",  alt="")
						.layer-7
							.layer.image-parallax(data-depth="0.12")
								img(src="images/card-4-user-1.jpg",  alt="")
						.layer-8
							.layer.image-parallax(data-depth="0.3")
								img(src="images/card-4-user-2.jpg",  alt="")


				.col-lg-4.offset-top-50.offset-lg-top-0
					.quote-decorate-classic.quote-decorate-simple
						.quote-decorate-header
							h2.text-accent Merry 
								br
								| Christmas
							h6.text-accent-classic.offset-top-24 & happy new year
						.quote-decorate-divider
							span.icon.linearicons-snow2
						.quote-decorate-body
							p May the magic and the wonder of the holiday stay with you throughout the coming year!
							p.quote-decorate-author John Doe, CEO
				
					
	// Modal
	#contact.modal.fade(tabindex='-1', role='dialog')
		.modal-dialog.modal-dialog-centered(role='document')
			.modal-content.bg-lightest
				.modal-header
					h4.modal-title.mt-0 Contact Us
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
					
				.modal-body.py-4
					form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
						.row.justify-content-sm-center
							.col-md-12
								.form-group
									label.form-label(for="git-3-mailform-email") E-mail
									input#git-3-mailform-email.form-control.bg-default(type="text" name="email" data-constraints="@Required @Email")
							.col-md-12
								.form-group.offset-md-top-14
									label.form-label(for="git-3-mailform-phone") Phone
									input#git-3-mailform-phone.form-control.bg-default(type="text" name="phone" data-constraints="@Required @Numeric")
							
							.col-md-12
								.form-group.offset-md-top-14
									label.form-label(for="git-3-mailform-message") Message
									textarea#git-3-mailform-message.form-control.bg-default(name="message" data-constraints="@Required")
						.offset-top-20.text-center
							button(type="submit").btn.btn-primary.btn-ellipse send message