//- nameList - array of tabs list
mixin tabs-classic-vertical(nameList, tabsGroup)
  // Responsive-tabs
  .responsive-tabs.responsive-tabs-classic.responsive-tabs-classic-vertical(data-type="vertical")
    
    .row.justify-content-lg-between
      .col-lg-9
        span.tabs-text Only 4 days
        .resp-tabs-container(data-group= tabsGroup || "tabs-group-default", class= tabsGroup || "tabs-group-default")
          
          block
      .col-lg-3 
        .tab-list
          span.tabs-text Only 4 days
          ul.resp-tabs-list(data-group= tabsGroup || "tabs-group-default", class= tabsGroup || "tabs-group-default")
            
            each item in nameList
              li= item
    