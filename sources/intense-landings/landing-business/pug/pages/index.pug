	section.section.novi-background.bg-cover.bg-image.section-lg.bg-default.text-center#pricing(data-type='anchor')
		.container
			.row
				// Owl Carousel
				.owl-carousel.pricing-carousel-2(data-items='1',data-lg-items='3', data-stage-padding='0', data-loop='false', data-margin='0', data-mouse-drag="false",  data-dots='true')

					.pricing-box-2
						.pricing-title
