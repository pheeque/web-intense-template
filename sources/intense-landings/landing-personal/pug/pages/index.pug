  // Counters
  section.section.novi-background.bg-cover.bg-image.bg-default.section-xl
    .container
      .row.no-gutters.custom-bordered
        .col-sm-6.col-md-3
          .counter-box
            .counter(data-from='0', data-to='12') 12
