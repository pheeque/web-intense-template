  // contact us
  section.section.novi-background.bg-cover.bg-image.section-lg.bg-default.text-center#contact-us(data-type='anchor')
    .container
      .row.justify-content-md-center
        .col-md-10.col-lg-10.col-xl-6
          h3 Get in Touch

          // RD Mailform
          form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='forms', method='post', action='bat/rd-mailform.php')
            .row.justify-content-sm-center.row-30
              .col-md-6
                .form-wrap.form-wrap-validation
                  label.form-label(for="forms-name") First name
                  input#forms-name.form-input(type="text" name="name" data-constraints='@Required')
              .col-md-6
                .form-wrap.form-wrap-validation
                  label.form-label(for="forms-last-name") Last name
                  input#forms-last-name.form-input(type="text" name="last-name" data-constraints="@Required")
              .col-md-6
                .form-wrap.form-wrap-validation
                  label.form-label(for="forms-email") E-mail
                  input#forms-email.form-input(type="email" name="email" data-constraints="@Email @Required")
              .col-md-6
                .form-wrap.form-wrap-validation
                  label.form-label(for="forms-phone") Phone
                  input#forms-phone.form-input(type="text" name="phone" data-constraints="@Numeric @Required")
              .col-md-12
                .form-wrap.form-wrap-validation
                  label.form-label(for="forms-message") Message
                  textarea#forms-message.form-input(name="message" data-constraints="@Required")
              .col-md-6
                .form-wrap.form-wrap-validation.form-wrap-validation-left
                  //Google captcha
                  .recaptcha#captcha1(data-sitekey="6LfZlSETAAAAAC5VW4R4tQP8Am_to4bM3dddxkEt")
              .col-md-6.form-button
                button(type="submit").btn.btn-primary.btn-square.btn-block.btn-effect-ujarak send message
                

