include ../elements/_ui-material-parallax

//- title - page title
//- breacrumbs - an array of {link} object
//- url - address of bg-parallax img
mixin breadcrumb-modern(title, breadcrumbs, url)
  // Modern Breadcrumbs
  section
    +material-parallax({ img: url }).breadcrumb-modern.bg-gray-darkest
      .bg-overlay-gray-darkest
        .container.section-top-98.section-bottom-34.section-lg-bottom-66.section-lg-98.section-xl-top-155.section-xl-bottom-66
          .text-extra-big.font-weight-bold.d-none.d-lg-block= title
          ul.list-inline.list-inline-dashed.p.offset-top-0.offset-xl-top-20
            each link, index in breadcrumbs
              if breadcrumbs[parseInt(index) + 1]
                li.list-inline-item
                  a(href=link.href)= link.title
              else
                li.list-inline-item
                  = link.title
