extends  ../_skeleton

block title
  title= cfg.nav.findJob.title

block page

  // Page Head
  header.page-head.slider-menu-position
    // - RD Navbar
    +rd-navbar-floated(
    'rd-navbar-dark rd-navbar-dark-transparent',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.findJob,
    cfg.nav
    )
    .context-dark
      +breadcrumb-modern("Find a Job", {
        0: {
          "type": "link",
          "title": cfg.nav.home.title,
          "href": cfg.nav.home.href
        },
        1: {
          "type": "link",
          "title": cfg.nav.findJob.title,
          "href": cfg.nav.findJob.href
        }
      }, "images/background-02-1920x870.jpg")

  // Page Contents
  main.page-content

    // Search Engine
    section.section-top-34.section-bottom-66.bg-primary
      .container
        form.row.grid-group-sm.offset-top-10.offset-md-top-30
          .col-xl-10
            .group-sm.group-top
              .group-item.element-fullwidth(style="max-width: 324px;")
                .form-group
                  label.form-label.rd-input-label(for="keywords-search-form-input") Keywords
                  input.form-control#keywords-search-form-input(type="text" name="s" autocomplete="off")

              .group-item.element-fullwidth(style="max-width: 324px;")
                .form-group
                  label.form-label.rd-input-label(for="location-search-form-input") Location
                  input.form-control#location-search-form-input(type="text" name="s" autocomplete="off")

              .group-item.element-fullwidth(style="max-width: 324px;")
                .form-group
                  select.form-control(id="form-filter-location" name="location" data-minimum-results-for-search="Infinity")
                    option(value="1") Any Category
                    option(value="2") New York
                    option(value="3") Missouri
                    option(value="4") Los Angeles

              .group-item.element-fullwidth
                .form-group.group-sm.offset-top-20.text-xxl-left
                  .group-item
                    .custom-control.custom-checkbox.d-inline
                      input#customCheck0.custom-control-input( name="input-group-category", type="checkbox" )
                      label.custom-control-label( for='customCheck0' ) Freelance
                  .group-item
                    .custom-control.custom-checkbox.d-inline
                      input#customCheck1.custom-control-input( name="input-group-category", type="checkbox" )
                      label.custom-control-label( for='customCheck1' ) Full Time
                  .group-item
                    .custom-control.custom-checkbox.d-inline
                      input#customCheck2.custom-control-input( name="input-group-category", type="checkbox" )
                      label.custom-control-label( for='customCheck2' ) Internship
                  .group-item
                    .custom-control.custom-checkbox.d-inline
                      input#customCheck3.custom-control-input( name="input-group-category", type="checkbox" )
                      label.custom-control-label( for='customCheck3' ) Part Time
                  .group-item
                    .custom-control.custom-checkbox.d-inline
                      input#customCheck4.custom-control-input( name="input-group-category", type="checkbox" )
                      label.custom-control-label( for='customCheck4' ) Temporary

          .col-xl-2
            .d-block.d-xl-inline-block
              button.btn.btn-warning.element-fullwidth(type="button" style="max-width: 170px; min-width: 170px; min-height: 50px;") Find Job

