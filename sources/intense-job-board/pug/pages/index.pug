extends  ../_skeleton

//- Includes
include ../elements/_ui-page-loader-variant-1
include ../elements/_ui-material-parallax
include ../elements/_ui-post-modern
include ../elements/_ui-box-icon-type-3
include ../elements/_ui-quote-simple
include ../elements/_ui-box-offer-type-1
include ../elements/_ui-testimonials-slider-5

block title
  title= cfg.brand.name

block page

  +page-loader-1(cfg.brand.logoBig)

  // Page Head
  header.page-head.slider-menu-position
    // - RD Navbar
    +rd-navbar-floated(
    'rd-navbar-dark rd-navbar-dark-transparent',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.home,
    cfg.nav
    )

  // Page Contents
  main.page-content
    // Build Your Future
    section
      +material-parallax({ img: 'images/background-01-1920x870.jpg' })
        .bg-overlay-gray-darkest
          .container.section-98.section-md-254
            .row.justify-content-sm-center
              .col-sm-12
                div.text-extra-big.text-white.font-weight-bold Build Your Future
                h4.text-muted.offset-top-20.offset-md-top-41 We offer #[span.text-primary.font-weight-bold 2,989] job vacancies right now!

                form.offset-top-10.offset-md-top-30
                  .group-sm.group-top
                    .group-item.element-fullwidth(style="max-width: 352px;")
                      .form-group
                        label.form-label.rd-input-label(for="home-search-form-input") Job title, skills, or company
                        input.form-control#home-search-form-input(type="text" name="s" autocomplete="off")

                    .group-item.element-fullwidth(style="max-width: 230px;")
                      .form-group
                        select.form-control(id="form-filter-location" name="location" data-minimum-results-for-search="Infinity")
                          option(value="1") City or state
                          option(value="2") New York
                          option(value="3") Missouri
                          option(value="4") Los Angeles

                    .d-block.d-xl-inline-block
                      button.btn.btn-primary.element-fullwidth(type="button" style="max-width: 170px; min-width: 170px; min-height: 50px;") Find Job

    // Offers
    section.section-top-50.section-bottom-34.section-xl-top-0.section-xl-bottom-0.context-dark.bg-primary
      .row.no-gutters.justify-content-sm-center
        .col-sm-10.col-md-9.col-lg-10.col-xl-12
          .owl-carousel.owl-carousel-default.veil-xl-owl-dots.veil-owl-nav( data-items="1" data-sm-items="2" data-lg-items="3" data-xl-items="6" data-dots="true" )
            div
              +box-offer-type-1({
                "link": "find-job.html",
                "waypoint": null
              },{
                "styling": "list list-unstyled list-vertical-right-line bg-primary",
                "itemPadding": "section-lg-34",
              },"icon icon-lg mdi mdi-hospital",
              {
                "styling": "h5 offset-top-14",
                "description": "Healthcare",
              },"divider divider-sm bg-white")

            div
              +box-offer-type-1({
                "link": "find-job.html",
                "waypoint": null
              },{
                "styling": "list list-unstyled list-vertical-right-line bg-primary",
                "itemPadding": "section-lg-34",
              },"icon icon-lg mdi mdi-car",
              {
                "styling": "h5 offset-top-14",
                "description": "Automobile Jobs",
              },"divider divider-sm bg-white")

            div
              +box-offer-type-1({
                "link": "find-job.html",
                "waypoint": null
              },{
                "styling": "list list-unstyled list-vertical-right-line bg-primary",
                "itemPadding": "section-lg-34",
              },"icon icon-lg fa fa-building-o",
              {
                "styling": "h5 offset-top-14",
                "description": "Construction",
              },"divider divider-sm bg-white")

            div
              +box-offer-type-1({
                "link": "find-job.html",
                "waypoint": null
              },{
                "styling": "list list-unstyled list-vertical-right-line bg-primary",
                "itemPadding": "section-lg-34",
              },"icon icon-lg mdi mdi-food",
              {
                "styling": "h5 offset-top-14",
                "description": "Food Service",
              },"divider divider-sm bg-white")

            div
              +box-offer-type-1({
                "link": "find-job.html",
                "waypoint": null
              },{
                "styling": "list list-unstyled list-vertical-right-line bg-primary",
                "itemPadding": "section-lg-34",
              },"icon icon-lg mdi mdi-earth",
              {
                "styling": "h5 offset-top-14",
                "description": "Logistics",
              },"divider divider-sm bg-white")

            div
              +box-offer-type-1({
                "link": "find-job.html",
                "waypoint": null
              },{
                "styling": "list list-unstyled list-vertical-right-line bg-primary",
                "itemPadding": "section-lg-34",
              },"icon icon-lg mdi mdi-cash-multiple",
              {
                "styling": "h5 offset-top-14",
                "description": "Finance",
              },"divider divider-sm bg-white")

    // Latest Jobs
    section.section-98.section-md-110
      .container
        h1 Latest Jobs
        hr.divider.divider-sm.bg-darkers
        // Bootstrap Table
        .table-responsive.clearfix
          table.table.table-striped
            tr
              th
              th.text-regular.text-dark.big Date
              th.text-regular.text-dark.big Company
              th.text-regular.text-dark.big Job Vacancy
              th.text-regular.text-dark.big City
              th.text-regular.text-dark.big Salary
              th.text-regular.text-dark.big Employment
            tr
              th
                span.icon.icon-xxs.mdi.mdi-fire.text-danger
              td 11.05.2018, 4:16pm
              td
                a(href=cfg.nav.allPages.submenu.yourCareerStartsHere.href)
                  img.img-semi-transparent-inverse(src="images/partner-01-45x40.png" width="45" height="40" alt='')
              td.font-weight-bold.text-primary.p
                a(href=cfg.nav.allPages.submenu.projectManagers.href) Developer
              td New York
              td $6000
              td Full time
            tr
              th
                span.icon.icon-xxs.mdi.mdi-fire.text-danger
              td 06.02.2018, 2:54pm
              td
                a(href=cfg.nav.allPages.submenu.yourCareerStartsHere.href)
                  img.img-semi-transparent-inverse(src="images/partner-02-50x40.png" width="50" height="40" alt='')
              td.font-weight-bold.text-primary.p
                a(href=cfg.nav.allPages.submenu.projectManagers.href) Project Manager
              td San Diego
              td $4000
              td Full time
            tr
              th
                span.icon.icon-xxs.mdi.mdi-airplane.text-neon-carrot
              td 18.01.2018, 2:42pm
              td
                a(href=cfg.nav.allPages.submenu.yourCareerStartsHere.href)
                  img.img-semi-transparent-inverse(src="images/partner-03-40x40.png" width="40" height="40" alt='')
              td.font-weight-bold.text-primary.p
                a(href=cfg.nav.allPages.submenu.projectManagers.href) Truck Driver
              td Dallas
              td $2000
              td Part time
            tr
              th
              td 13.04.2018, 2:54pm
              td
                a(href=cfg.nav.allPages.submenu.yourCareerStartsHere.href)
                  img.img-semi-transparent-inverse(src="images/partner-04-76x40.png" width="76" height="40" alt='')
              td.font-weight-bold.text-primary.p
                a(href=cfg.nav.allPages.submenu.projectManagers.href) JS Programmer
              td Seattle
              td $7000
              td Full time
            tr
              th
              td 18.05.2018, 4:32pm
              td
                a(href=cfg.nav.allPages.submenu.yourCareerStartsHere.href)
                  img.img-semi-transparent-inverse(src="images/partner-01-45x40.png" width="45" height="40" alt='')
              td.font-weight-bold.text-primary.p
                a(href=cfg.nav.allPages.submenu.projectManagers.href) Developer
              td San Francisco
              td $5000
              td Part time

        .row.justify-content-sm-center.offset-top-66
          .col-sm-5.col-md-3.col-lg-3.col-xl-2
            a.btn.btn-primary.d-sm-block(href=cfg.nav.findJob.href) view all

    // Why People Choose Us
    section.section-98.section-md-110.bg-gray-light
      .container
        h1 Why People Choose Us
        hr.divider.divider-sm.bg-darkers
        .row.justify-content-sm-center.text-lg-left.offset-top-50.offset-xl-top-66
          .col-md-9.col-lg-4.offset-xl-0
            +box-icon-type-3("icon-sm text-primary mdi mdi-account-check", "Verified employers", "text-uppercase font-weight-bold", "We pay a lot of attention to the employers we cooperate with and vacancies they submit to our job board.")
          .col-md-9.col-lg-4.offset-xl-0.offset-top-50.offset-lg-top-0
            +box-icon-type-3("icon-sm text-primary mdi mdi-chart-bar", "Demanded vacancies", "text-uppercase font-weight-bold", "Our catalog contains only the most demanded vacancies from American and international companies with offices in the US.")
          .col-md-9.col-lg-4.offset-xl-0.offset-top-50.offset-lg-top-0
            +box-icon-type-3("icon-sm text-primary mdi mdi-newspaper", "Employment blog", "text-uppercase font-weight-bold", "We have recently launched our employment blog where we review top rated vacancies and give useful advice to our readers.")

    // Start Building Your Own Job Board Now
    section.context-dark
      +material-parallax({ img: 'images/background-02-1920x870.jpg' })
        .bg-overlay-gray-darkest
          .container.section-98
            .row.align-items-sm-center.no-gutters
              .col-lg-8.col-xl-10.text-center.text-lg-left
                h1 Start Building Your Own Career Now
              .col-lg-4.col-xl-2.offset-top-41.offset-lg-top-0
                a.btn.btn-primary.btn-block.mx-auto.d-block(href=cfg.nav.allPages.submenu.yourCareerStartsHere.href style="max-width:195px;") get started

    // Testimonials
    section.section-98.section-md-110
      .container
        h1 Testimonials
        hr.divider.divider-sm.bg-darkers
        +testimonials-slider-5([{
          "image": {
            "width": 60,
            "height": 60,
            "src": "images/user-brittany-freeman-60x60.jpg",
            "alt": "Brittany Freeman"
          },
          "title": {
            "titleStyling": "h5 text-primary",
            "titleDesc": "Brittany Freeman"
          },
          "description": {
            "descStyling": "p text-dark",
            "desc": "Manager"
          },
          "quote": {
            "title": "Thank you for the assistance you provided in my job searching. During a short period of using your website I have found several vacancies where my skills can be used.",
            "styling": "h4 text-center text-regular font-italic",
            "firstDivider": "hr hr-gradient",
            "lastDivider": "hr hr-gradient"
          },
          "unitStyling": "unit unit-xs flex-sm-row unit-spacing-sm text-xs-left",
        },
          {
            "image": {
              "width": 60,
              "height": 60,
              "src": "images/user-james-newman-60x60.jpg",
              "alt": "James Newman"
            },
            "title": {
              "titleStyling": "h5 text-primary",
              "titleDesc": "James Newman"
            },
            "description": {
              "descStyling": "p text-dark",
              "desc": "Manager"
            },
            "quote": {
              "title": "I just want to thank you for your help. I was so pleased and grateful. Keep up the excellent work. Your site provides the best support I have ever encountered.",
              "styling": "h4 text-center text-regular font-italic",
