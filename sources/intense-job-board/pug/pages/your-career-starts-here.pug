extends  ../_skeleton

//- Includes
include ../elements/_ui-vacation

block title
  title= cfg.nav.allPages.submenu.yourCareerStartsHere.title

block page

  // Page Head
  header.page-head.slider-menu-position
    // - RD Navbar
    +rd-navbar-floated(
    'rd-navbar-dark rd-navbar-dark-transparent',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.allPages,
    cfg.nav
    )
    .context-dark
      +breadcrumb-modern("Your Career Starts Here", {
        0: {
          "type": "link",
          "title": cfg.nav.home.title,
          "href": cfg.nav.home.href
        },
        1: {
          "type": "link",
          "title": "Employers Page",
          "href": "#"
        },
        2: {
          "type": "link",
          "title": "Template Monster",
          "href": "#"
        }
      }, "images/background-02-1920x870.jpg")

  // Page Contents
  main.page-content

    // TemplateMonster
    section.section-98.section-md-110.bg-lightest
      .container
        img.img-fluid.mx-auto.d-block(src="images/employers-01-64x57.png" width="64" height="57" alt="")
        h1 TemplateMonster
        hr.divider.bg-darkers
        p.offset-top-50 Take a job opportunity of a lifetime – join the team of TemplateMonster. Located in New York, this company cherishes active tech savvies willing to work on projects of any type and complexity. If you are enthusiastic about tech innovations and ready to make impactful decisions, feel free to send your CV. The company is interested in hiring professionals for a long term and also provides a remote work opportunity.
        .row.offset-top-66
          .col-md-6
            +post-vacation(cfg.nav.findJob.href, "Front end developer ",[{
              "type": "location",
              "link": "#",
              "text": "New York"
            },
              {
                "type": "work-time",
                "text": "Full Time"
              },
              {
                "type": "date",
                "text": "March 12, 2018"
              }])

          .col-md-6.offset-top-30.offset-md-top-0
            +post-vacation(cfg.nav.findJob.href, "PHP Developer",[{
              "type": "location",
              "link": "#",
              "text": "New York"
            },
              {
                "type": "work-time",
                "text": "Full Time"
              },
              {
                "type": "date",
                "text": "March 10, 2018"
              }])

          .col-md-6.offset-top-30
            +post-vacation(cfg.nav.findJob.href, "System administrator",[{
              "type": "location",
              "link": "#",
              "text": "New York"
            },
              {
                "type": "work-time",
                "text": "Full Time"
              },
              {
                "type": "date",
                "text": "March 12, 2018"
              }])

          .col-md-6.offset-top-30
            +post-vacation(cfg.nav.findJob.href, "Designer",[{
              "type": "location",
              "link": "#",
              "text": "New York"
            },
              {
                "type": "work-time",
                "text": "Full Time"
              },
              {
                "type": "date",
                "text": "March 17, 2018"
              }])

          .col-md-6.offset-top-30
            +post-vacation(cfg.nav.findJob.href, "Copywriter",[{
              "type": "location",
              "link": "#",
              "text": "New York"
            },
              {
                "type": "work-time",
                "text": "Full Time"
              },
              {
                "type": "date",
                "text": "March 15, 2018"
              }])

          .col-md-6.offset-top-30
            +post-vacation(cfg.nav.findJob.href, "Outreach manager",[{
              "type": "location",
              "link": "#",
              "text": "New York"
            },
              {
                "type": "work-time",
                "text": "Full Time"
              },
              {
                "type": "date",
                "text": "March 21, 2018"
              }])

    // Get In Touch
    section.section-98.section-md-110
      .container
        .row.justify-content-sm-center
          .col-md-9.col-lg-8.col-xl-12
            .row
              .col-xl-8.text-lg-left
                h1 Get In Touch
                hr.divider.hr-md-left-0.bg-darkers
                p.offset-xl-top-50 You can contact us any way that is convenient for you. We are available 24/7 via fax, email or telephone. You can also use a quick contact form located on this page to ask a question about our services and current offers. We would be happy to answer your questions or offer any help.
                // RD Mailform
                form.rd-mailform.text-left.offset-top-50(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
                  .row
                    .col-xl-6
                      .form-group
                        label.form-label.form-label-outside(for="contacts-first-name") First Name
                        input#contacts-first-name.form-control(type="text" name="name" data-constraints="@Required")

                    .col-xl-6.offset-top-20.offset-xl-top-0
                      .form-group
                        label.form-label.form-label-outside(for="contacts-last-name") Last Name
                        input#contacts-last-name.form-control(type="text" name="name" data-constraints="@Required")

                    .col-xl-12.offset-top-20
                      .form-group
                        label.form-label.form-label-outside(for="contacts-email") E-mail
                        input#contacts-email.form-control(type="email" name="email" data-constraints="@Required @Email")

                    .col-xl-12.offset-top-20
                      .form-group
                        label.form-label.form-label-outside(for="contact-me-message") Message
                        textarea#contact-me-message.form-control(name="message" data-constraints="@Required" style="height: 160px;")
                  .row.justify-content-sm-center.justify-content-xl-start.offset-top-30
                    .col-sm-5.col-md-4
                      .inset-left-50.inset-right-50.inset-sm-left-0.inset-sm-right-0.inset-xl-right-50
                        button(type="submit").btn.btn-block.btn-primary Send

              .col-xl-4.text-left.offset-top-66.offset-xl-top-0.inset-xl-left-80
                div
                  h5 Social
                div.offset-top-14.text-subline.offset-top-10
                div.offset-top-20
                  ul.list-inline.list-inline-xs.text-darker.list-inline-primary
                    li.list-inline-item.h5.offset-top-0
                      a.text-dark(href="#" class="fa fa-facebook")
                    li.list-inline-item.h5.offset-top-0
                      a.text-dark(href="#" class="fa fa-twitter")
                    li.list-inline-item.h5.offset-top-0
                      a.text-dark(href="#" class="fa fa-google-plus")
                    li.list-inline-item.h5.offset-top-0
                      a.text-dark(href="#" class="fa fa-youtube")

                div.offset-top-41.offset-xl-top-66
                  h5 Phone
                div.offset-top-14.text-subline.offset-top-10
                address.contact-info.offset-top-20
                  span.icon.icon-xs.fa.fa-phone.text-middle.text-primary
                  a.text-middle(href="tel:#") 1-800-1234-567

                div.offset-top-66
                  h5 Address
                div.offset-top-14.text-subline.offset-top-10
                address.unit.align-items-start.flex-row.unit-spacing-xxs.contact-info.offset-top-20
                  .unit-left
                    span.icon.icon-xs.fa.fa-map-marker.text-middle.text-primary.inset-right-10
                  .unit-body
                    a(href="#") 4578 Marmora St, San Francisco D04 89GR

                div.offset-top-50
                  h5.text-darker Open Hours
                div.text-subline.offset-top-14
                .p.unit.align-items-start.unit-spacing-xs.flex-row.offset-top-24
                  .unit-left
                    span.icon.icon-xxs.fa.fa-clock-o.text-primary
                  .unit-body
                    address
                      div #[span.font-weight-bold Monday–Friday:] 9:00am–6:00pm
                      div #[span.font-weight-bold Saturday:] 10:00am–4:00pm
                      div #[span.font-weight-bold Sunday:] 10:00am–1:00pm

  // Page Footer
  include ../sections/_section-footer
