//- Includes
include ../elements/_widget-twitter
include ../elements/_widget-form-contact
include ../elements/_widget-list-social
include ../elements/_widget-form-subscribe-type-2
include ../elements/_widget-flickrfeed

// Default footer
footer.section-relative.section-top-66.section-bottom-34.page-footer.bg-gray-base.context-dark
  .container
    .row.justify-content-md-center.text-xl-left
      .col-md-12
        .row.justify-content-sm-center

          .col-sm-10.col-md-3.text-left.order-md-4.col-md-10.col-xl-3.offset-md-top-50.offset-xl-top-0.order-xl-2
            // Twitter Feed
            p.text-uppercase.text-spacing-60.font-weight-bold.text-center.text-xl-left Latest tweets
            .offset-top-20
              +widget-twitter({
                "dataTwitterUsername": "templatemonster"
              }, true)

          .col-sm-10.col-md-3.offset-top-66.order-md-3.col-md-10.col-xl-2.offset-xl-top-0.order-xl-3
            // Flickr Feed
            p.text-uppercase.text-spacing-60.font-weight-bold Flickr
            .offset-top-24
              +widget-flickrfeed("tm58888_landscapes", {"data-image_q": "src"}, 4)

          .col-sm-10.col-md-3.offset-top-66.order-md-2.offset-md-top-0.col-md-6.col-xl-4.order-xl-4
            p.text-uppercase.text-spacing-60.font-weight-bold Newsletter
            p.offset-top-20.text-left Keep up with the latest news, past events, interesting facts, and other stuff. Enter your e-mail and subscribe to my newsletter.
            .offset-top-30
              +widget-form-subscribe-type-2("Type your E-Mail", "form-output-global","icon", true)

          .col-sm-10.col-md-3.offset-top-66.order-md-1.offset-md-top-0.col-md-6.col-xl-3.order-xl-1
            // Footer brand
            .footer-brand
              a(href="index.html")
                != cfg.brand.logoInverse
            p.offset-top-20.text-md-left.
              Intense Blog is exactly what you need.
              Create your own unique personal blog with Intense Blog.
            .offset-top-20.text-sm-center.text-xl-left
              +widget-list-social([
                {
                  "icon": "fa fa-facebook",
                  "href": "#"
                },
                {
                  "icon": "fa fa-twitter",
                  "href": "#"
                },
                {
                  "icon": "fa fa-google-plus",
                  "href": "#"
                },
                {
                  "icon": "fa fa-linkedin",
                  "href": "#"
                }
              ])
            p.small.text-darker.offset-top-20
              | #{cfg.brand.name} &copy; #[span(id="copyright-year")] . #[a(href="privacy.html") Privacy Policy]
              | . Design&nbsp;by&nbsp;#[a(href="https://zemez.io/") Zemez]


