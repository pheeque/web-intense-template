extends  ../_skeleton

//- Includes
include ../elements/_ui-rd-navbar-logo-center
include  ../elements/_ui-breadcrumb-modern
include  ../elements/_ui-google-map

//-Title
block title
  title= cfg.nav.contacts.title

//- Page
block page
  // Page Header
  header.page-head
    //- RD Navbar
    +rd-navbar-logo-center(
    'rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.contacts,
    cfg.nav
    )

  +breadcrumb-modern("Contacts", {
    0: {
      "type": "link",
      "title": cfg.nav.home.title,
      "href": cfg.nav.home.href
    },
    1: {
      "type": "link",
      "title": cfg.nav.contacts.title,
      "href": cfg.nav.contacts.href
    }
  }, "images/background-1-1920x651.jpg")

  // Page Content
  main.page-content
    section.section-top-98.section-md-top-110
      .container
        .row.justify-content-sm-center
          .col-md-9.col-lg-8.col-xl-12
            .row
              .col-xl-8
                h1.text-between Get In Touch
                .text-left.offset-top-30
                  p You can contact us any way that is convenient for you. We are available 24/7 via fax or email. You can also use a quick contact form below or visit our office personally.
                  p Email us with any questions or inquiries or use our contact data. We would be happy to answer your questions.
                // RD Mailform
                form.rd-mailform.text-left.offset-top-50(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
                  .row
                    .col-xl-6
                      .form-group
                        label.form-label.form-label-outside(for="contacts-first-name") First Name
                        input#contacts-first-name.form-control(type="text" name="first name" data-constraints="@Required")

                    .col-xl-6.offset-top-20.offset-xl-top-0
                      .form-group
                        label.form-label.form-label-outside(for="contacts-second-name") Second Name
                        input#contacts-second-name.form-control(type="text" name="last name" data-constraints="@Required")

                    .col-xl-6.offset-top-20
                      .form-group
                        label.form-label.form-label-outside(for="contacts-email") E-mail
                        input#contacts-email.form-control(type="email" name="email" data-constraints="@Required @Email")

                    .col-xl-6.offset-top-20
                      .form-group
                        label.form-label.form-label-outside(for="contacts-phone") Phone
                        input#contacts-phone.form-control(type="text" name="phone" data-constraints="@Numeric @Required")

                    .col-xl-12.offset-top-20
                      .form-group
                        label.form-label.form-label-outside(for="contact-me-message") Message
                        textarea#contact-me-message.form-control(name="message" data-constraints="@Required" style="height: 160px;")
                  .row.justify-content-sm-center.justify-content-xl-start.offset-top-30
                    .col-sm-5.col-md-4.col-xl-3
                      .inset-left-50.inset-right-50.inset-sm-left-0.inset-sm-right-0.inset-xl-right-50
                        button(type="submit").btn.btn-block.btn-primary Send
              .col-xl-4.text-left.offset-top-66.offset-xl-top-0
                div
                  p.text-darker.text-uppercase.font-weight-bold follow us
                div.text-subline.offset-top-10
                ul.list-inline.list-inline-sm.list-inline-white.offset-top-30.text-darker
                  li.list-inline-item.h6.offset-top-0
                    span.big
                      a.text-dark(href="#" class="fa fa-facebook")
                  li.list-inline-item.h6.offset-top-0
                    span.big
                      a.text-dark(href="#" class="fa fa-twitter")
                  li.list-inline-item.h6.offset-top-0
                    span.big
                      a.text-dark(href="#" class="fa fa-google-plus")
                  li.list-inline-item.h6.offset-top-0
                    span.big
                      a.text-dark(href="#" class="fa fa-pinterest")
                  li.list-inline-item.h6.offset-top-0
                    span.big
                      a.text-dark(href="#" class="fa fa-vimeo")
                  li.list-inline-item.h6.offset-top-0
                    span.big
                      a.text-dark(href="#" class="fa fa-youtube")
                  li.list-inline-item.h6.offset-top-0
                    span.big
                      a.text-dark(href="#" class="fa fa-linkedin")

                div.offset-top-41
                  p.text-darker.text-uppercase.font-weight-bold Phones
                div.text-subline.offset-top-10
                div.offset-top-20
                  a(href="tel:#") 1-800-1324-567
                div
                  a(href="tel:#") 1-800-9875-321

                div.offset-top-50
                  p.text-darker.text-uppercase.font-weight-bold e-mail
                div.text-subline.offset-top-10
                div.offset-top-20
                  p
                    a.text-primary(href="mailto:#") info@demolink.org

                div.offset-top-50
                  p.text-darker.text-uppercase.font-weight-bold shop address
                div.text-subline.offset-top-10
                div.offset-top-20
                  p 9870 St Vincent Place, Glasgow, DC 45 Fr 45.

                div.offset-top-50
                  p.text-darker.text-uppercase.font-weight-bold Open hours
                div.text-subline.offset-top-10
                div.offset-top-20
                  p 9:00–19:00 Mon–Sat

        .offset-top-124
          +google-map({
            center: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
          }, [{
            location: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.',
            description: '9870 St Vincent Place, Glasgow'
          }])



  // Page Footers
  include ../sections/_section-footer-variant-4
