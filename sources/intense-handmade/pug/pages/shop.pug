              .col-sm-6.col-lg-12
                // Brands
                h6.offset-top-41.offset-sm-top-0.offset-lg-top-41.text-uppercase.text-spacing-60 Brands
                div.text-subline
                .custom-control.custom-checkbox.offset-top-20
                  input#customCheck6.custom-control-input( name="input-group-brands", value="apc", type="checkbox" )
                  label.custom-control-label( for='customCheck6' ) Koh-i-Noor #[span.text-dark (37)]
