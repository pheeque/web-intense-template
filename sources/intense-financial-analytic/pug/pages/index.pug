extends  ../_skeleton

include ../elements/_ui-material-parallax
include ../elements/_ui-box-icon-type-2
include ../elements/_ui-testimonials-type-3
include ../elements/_ui-video-embed

block title
  title= cfg.brand.name

block page
  //Page Head
  header.section.page-head.slider-menu-position
    +rd-navbar-default(
      'rd-navbar-default rd-navbar-transparent',
      {
        'data-lg-auto-height': 'true',
        'data-md-layout': 'rd-navbar-fixed',
        'data-lg-layout': 'rd-navbar-static',
        'data-lg-stick-up': 'true'
      },
      cfg.brand.logoLite,
      cfg.nav.home,
      cfg.nav
    )

    +material-parallax({ img: 'images/background-01-1920x1118.jpg' })
      .container
        .row.align-items-center.justify-content-center.section-cover.section-66.text-lg-left.context-dark
          .col-sm-12
            div
              p.font-italic
                | Call us
            div
              .p
                a.h3( href='tel:#' )
                  | 1-800-1234-567
            div.offset-top-4.offset-xxl-top-24
              h1.text-capitalize
                span.big
                  | Because Money
            div.offset-top-4.offset-xxl-top-20
              h2.font-default.font-italic.text-regular
                | Doesn’t come with instructions
            .offset-top-41.offset-xxl-top-66
              a.btn.btn-lg.btn-warning( href='make-an-appointment.html' )
                | Free Consultation


  //Welcome
  section.section.novi-background.section-98.section-md-110
    .container
      h1 Welcome
      hr.divider.divider-lg.bg-mantis
      .row.justify-content-sm-center.grid-group-md
        .col-sm-11.col-lg-8
          p Dealing with your finances can be intimidating. That's why we take the time to listen to you, learn your goals and then create your plan using John Doe’s philosophies that reflect the latest academic research.

      .row.justify-content-sm-center.grid-group-md.offset-top-66
        .col-md-7.col-lg-4
          +box-icon-type-2('icon mdi mdi-cash-multiple icon-mantis-filled icon-circle', 'Saving Solutions', 'offset-top-20', 'There is a variety of saving plans which can be tailored to your needs, including:')
            .inset-md-left-20
              ul.list.list-marked
                li Tax Exempt Savings
                li Regular Savings.
        .col-md-7.col-lg-4
          +box-icon-type-2('icon mdi mdi-presentation icon-mantis-filled icon-circle', 'Tax Planning', 'offset-top-20', 'Inheritance tax planning is an important element of your wealth management strategy, as it allows you to continue to help your loved ones after you’re gone.')
        .col-md-7.col-lg-4
          +box-icon-type-2('icon mdi mdi-poll icon-mantis-filled icon-circle', 'University Fee Planning', 'offset-top-20', 'We all want our children to have good prospects, which is why education fees planning is a vital wealth management matter that shouldn’t be overlooked.')


  //About
  section.section.novi-background.section-50.section-lg-bottom-0.bg-white-lilac
    .container.container-wide
      .row.justify-content-center.align-items-center.text-lg-left
        .col-sm-10.col-md-8.col-lg-6.col-xxl-4.d-none.d-lg-block
          img.img-fluid.d-inline-block( src='images/user-john-doe-598x624.png', width='598', height='624', alt='' )
        .col-sm-10.col-lg-6.col-xl-5.col-xxl-4.offset-xl-1.section-lg-bottom-50
          div
            h1 About
          div
            hr.divider.divider-lg.bg-mantis.d-inline-block
          .offset-top-30.offset-lg-top-50
            p
              | Intense is an International Financial Planning company with offices in multiple jurisdictions over the world. Working with Intense gives me the ability to advise international expatriates living in the middle east from where I live in USA.
          blockquote.quote.quote-variant-2.offset-top-20
            .h3.font-italic.font-default
              q I am John Doe, a senior advisor for an independently owned financial planning company called Intense.
          .offset-top-30
            a(href='#').btn.btn-primary.btn-lg explore more


  //Testimonials
  section.section.novi-background.section-98.section-md-110
    .container
      h1 Testimonials
      hr.divider.divider-lg.bg-mantis
      .row.justify-content-sm-center.grid-group-md.offset-top-41.offset-lg-top-66
        .col-md-8.col-lg-4
          +testimonials-type-3(
            {
              'width': 80,
              'height': 80,
              'src': 'images/user-steven-carpenter-80x80.jpg',
              'alt': ''
            },
            'Johnson.M.J.',
            'Director of "Financial Times"',
            'It is not every day that you come across a passionate and trustworthy financial advisor. John Doe is true professional who does his work really well. Thanks John!'
          )
        .col-md-8.col-lg-4
          +testimonials-type-3(
            {
              'width': 80,
              'height': 80,
              'src': 'images/user-carol-harper-80x80.jpg',
              'alt': ''
            },
            'Carol Harper',
            'Director at Risktec Solutions Ltd',
            'In just 2 very short meetings with John he managed to find the solution personally catered to my situation and expectations. Punctual, well informed and very reliable.'
          )
        .col-md-8.col-lg-4
          +testimonials-type-3(
            {
              'width': 80,
              'height': 80,
              'src': 'images/user-andrew-wilson-80x80.jpg',
              'alt': ''
            },
            'Snow.J.R.',
            'Managing Director of BPW Global',
            'A very professional financial advisor, who is true to his word. John has demonstrated a high amount of integrity in the time I have known him, and he is fast to respond to my concerns.'
          )


  //One Philosophy
  +material-parallax({
    img: 'images/background-02-1920x809.jpg',
    Class: 'section-98 section-md-110 context-dark'
  }).section
    .container.text-lg-left
      .row.justify-content-center.justify-content-lg-between.grid-group-md
        .col-sm-10.col-lg-6.col-xl-5
          div
            h3.font-default.font-italic.text-regular More Than 100 Financial Planners,
          div
            h1 One Philosophy
          div
            hr.divider.divider-lg.d-inline-block
          .offset-top-14
            p
              | Every single one of our financial advisors receives rigorous training according to John Doe’s philosophy based on academic research (including that of a Nobel laureate in Economics) and Behavioral Finance.
          .offset-top-30
            a.btn.btn-lg.btn-block.btn-warning.d-inline-block(href='make-an-appointment.html' style='max-width:470px;')
              | Get Your Free Financial Analysis

        .col-sm-10.col-lg-6
          +video-embed({
            ratio: '16by9',
            href: '//www.youtube.com/embed/oeqP5JtihMA'
          })


  include ../sections/_section-footer-default
