extends  ../_skeleton

include ../elements/_ui-material-parallax
include ../elements/_ui-google-map

block title
  title= cfg.nav.contacts.title

block page
  //Page Head
  header.section.page-head
    +rd-navbar-default(
      'rd-navbar-default rd-navbar-light',
      {
        'data-lg-auto-height': 'true',
        'data-md-layout': 'rd-navbar-fixed',
        'data-lg-layout': 'rd-navbar-static',
        'data-lg-stick-up': 'true'
      },
      cfg.brand.logoInverse,
      cfg.nav.contacts,
      cfg.nav
    )


  //Breadcrumbs
  +material-parallax({
    img: 'images/background-03-1920x447.jpg',
    Class: 'section-41 section-md-50 section-lg-66 context-dark'
  }).section
    .container
      div
        h1.text-capitalize
          span.big
            | Contacts
      .offset-top-10
        ul.list-inline.list-inline-dashed.font-italic.p
          li.list-inline-item
            a( href='index.html' ) Home
          li.list-inline-item
            | Contacts


  //Get In Touch
  section.section.novi-background.section-98.section-md-top-110.section-md-bottom-124
    .container
      .row.justify-content-center.grid-group-lg
        .col-sm-10.col-md-8.col-lg-8.text-lg-left
          h1 Get In Touch
          div: hr.divider.divider-lg.bg-mantis.d-inline-block
          .offset-top-30.offset-lg-top-66
            p You can contact me any way that is convenient for you. I am available 24/7 via fax, email or telephone. You can also use a quick contact form located on this page to ask a question about my services and projects I work on. I would be happy to answer your questions or offer any help.
          .offset-top-50
            //RD Mailform
            form.rd-mailform.text-left( data-form-output='form-output-global', data-form-type='contact', method='post', action='bat/rd-mailform.php' )
              .row.grid-group-xs.justify-content-sm-center
                .col-md-6
                  .form-group
                    label.form-label.form-label-outside.form-label-size-lg.form-label-size-lg( for='git-3-mailform-first-name' ) First name
                    input#git-3-mailform-first-name.form-control( type='text', name='firstname', data-constraints='@Required' )
                .col-md-6
                  .form-group
                    label.form-label.form-label-outside.form-label-size-lg( for='git-3-mailform-last-name' ) Last name
                    input#git-3-mailform-last-name.form-control( type='text', name='lastname', data-constraints='@Required' )
                .col-12
                  .form-group
                    label.form-label.form-label-outside.form-label-size-lg( for='git-3-mailform-email' ) E-mail
                    input#git-3-mailform-email.form-control( type='text', name='email', data-constraints='@Required @Email' )
                .col-12
                  .form-group
                    label.form-label.form-label-outside.form-label-size-lg( for='git-3-mailform-message' ) Message
                    textarea#git-3-mailform-message.form-control( name='message', data-constraints='@Required' )
                .col-12.text-center.text-lg-left
                  button( type='submit', style='width:166px;' ).btn.btn-primary send

        .col-sm-10.col-lg-4
          //Sidebar
          aside.inset-lg-left-30.inset-xl-left-74
            .row.justify-content-center.grid-group-md.text-left
              .col-12.col-md-6.col-lg-12
                div: h5.text-darker Social
                .text-subline.offset-top-10
                ul.list-inline.list-inline-sm.list-inline-white.offset-top-30.text-darker
                  li.list-inline-item.h6.offset-top-0
                    span.big: a.text-dark.fa.fa-facebook( href='#' )
                  li.list-inline-item.h6.offset-top-0
                    span.big: a.text-dark.fa.fa-twitter( href='#' )
                  li.list-inline-item.h6.offset-top-0
                    span.big: a.text-dark.fa.fa-google-plus( href='#' )
                  li.list-inline-item.h6.offset-top-0
                    span.big: a.text-dark.fa.fa-youtube( href='#' )

              .col-12.col-md-6.col-lg-12
                div: h5.text-darker Phone
                .text-subline.offset-top-10
                .p.unit.unit-spacing-xs.flex-row.offset-top-24
                  .unit-left
                    span.novi-icon.icon.icon-xxs.mdi.mdi-cellphone-android.text-primary
                  .unit-body
                    a( href='tel:#' ) 1-800-1234-567

              .col-12.col-md-6.col-lg-12
                div: h5.text-darker Address
                .text-subline.offset-top-10
                .p.unit.unit-spacing-xs.flex-row.offset-top-24
                  .unit-left
                    span.novi-icon.icon.icon-xxs.mdi.mdi-map-marker.text-primary
                  .unit-body
                    address 4578 Marmora St, San Francisco D04 89GR

              .col-12.col-md-6.col-lg-12
                div: h5.text-darker Open Hours
                .text-subline.offset-top-10
                .p.unit.unit-spacing-xs.flex-row.offset-top-24
                  .unit-left
                    span.novi-icon.icon.icon-xxs.mdi.mdi-clock.text-primary
                  .unit-body
                    address
                      | Monday–Friday: 9:00am–6:00pm
                      br
                      | Saturday: 10:00am–4:00pm
                      br
                      | Sunday: 10:00am–1:00pm

              .col-12.col-md-6.col-lg-12
                a( href='make-an-appointment.html' ).btn.btn-block.btn-warning BOOK AN APPOINTMENT


  //Google map
  section.section
    +google-map({
      center: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
    }, [{
      location: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.',
      description: '9870 St Vincent Place, Glasgow'
    }])


  include ../sections/_section-footer-default
