//- icon - icon class
//- offsetTop - margin-top in heading
//- title - box title
//- desc - description of box
mixin box-icon-type-2(icon, title, clTitle, desc)
  //Icon Box Type 2
  .unit.unit-md.flex-lg-row.unit-spacing-xs.text-lg-left
    .unit-left
      span.novi-icon.icon(class= icon)
    .unit-body
      h5(class= clTitle)= title
      .text-left
        p= desc
        block
