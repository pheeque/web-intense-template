//- Post Modern
//- url - expanded post link
//- date - date of publishment
//- title - post title
//- tags - array of {link}
//- image - {image} object

mixin post-modern(url, type, date, title, tags, media)
  //Post Modern
  article.post.post-modern&attributes( attributes )
    //Post media
    if media
      header.post-media
        a(href= media.target.href)
          img.img-fluid.img-cover(width=media.thumb.width, height=media.thumb.height, src=media.thumb.src, alt=media.thumb.alt)

    //Post content
    section.post-content.text-left
      .post-meta.small.pull-sm-right
        span.text-middle.icon-xxs.mdi.mdi-clock.text-success
        time.font-italic.text-middle.text-dark(datetime="2018-01-01")= date

      ul.list-inline.offset-top-14.offset-md-top-0
        if tags
          li.list-inline-item
            .post-tags.group-xs
              each tag in tags
                a.label-custom.label-lg-custom.label-rounded-custom.label-success(href= tag.href)= tag.title
        li.list-inline-item
          .novi-icon.icon.icon-xxs.text-dark(class=type)

      //Post Title
      .post-title
        h6.offset-top-24
          a(href=url)= title

      //Post Body
      .post-body.offset-top-20
        block

