extends  ../_skeleton

//- Includes
include  ../elements/_ui-tabs-classic
include  ../elements/_ui-material-parallax
include ../elements/_widget-list-social

//-Title
block title
  title= "Login / Register"

//- Page
block page
  // Page Head
  header.page-head
    //- RD Navbar
    +rd-navbar-top-panel(
    'rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    "",
    cfg.nav
    )

  // Page Head
  header.page-head
    //- Section header
    section.context-dark
      +material-parallax({ img: 'images/bg-header-1920x362.jpg' })
        .container.section-top-34.section-md-top-98.section-bottom-34
          div
            h1.font-weight-bold Login / Register
          ul.list-inline.list-inline-dashed.p.text-light.breadcrumb-modern.offset-top-10.offset-md-top-66
            li.list-inline-item.active
              a(href="./") Home
            li.list-inline-item  Login Register

  // Page Contents
  main.page-content

    //Section Sign In
    section.section-98.section-md-110.section-bottom-66
      .container
        h2.font-weight-bold Sign In
        hr.divider.bg-saffron
        .offset-md-top-66
          +tabs-classic(['Login', 'Registration'])
            div
              .row.justify-content-sm-center.section-34
                .col-sm-8.col-md-6.col-lg-4
                  // RD Mailform
                  form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
                    .form-group
                      label.form-label.form-label-outside(for="form-login-username") Username or e-mail:
                      input#form-login-username.form-control.bg-white(type="text" name="username" data-constraints="@Required")
                    .form-group.offset-top-24
                      label.form-label.form-label-outside(for="form-login-password") Password:
                      input#form-login-password.form-control.bg-white(type="password" name="pass" data-constraints="@Required")
                    .offset-top-24
                      button(type="submit").btn.btn-primary.btn-block sign in
                  .offset-top-30
                    p or enter with
                    +widget-list-social([
                      {
                        "icon": "fa fa-facebook",
                        "href": "#"
                      },
                      {
                        "icon": "fa fa-twitter",
                        "href": "#"
                      },
                      {
                        "icon": "fa fa-google-plus",
                        "href": "#"
                      }
                    ])

            div
              .row.justify-content-sm-center.section-34
                .col-sm-8.col-md-6.col-lg-4
                  // RD Mailform
                  form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
                    .form-group
                      label.form-label.form-label-outside(for="form-register-username") Name:
                      input#form-register-username.form-control.bg-white(type="text" name="name" data-constraints="@Required")
                    .form-group.offset-top-24
                      label.form-label.form-label-outside(for="form-register-email") Email:
                      input#form-register-email.form-control.bg-white(type="text" name="email" data-constraints="@Required @Email")
                    .form-group.offset-top-24
                      label.form-label.form-label-outside(for="form-register-password") Password:
                      input#form-register-password.form-control.bg-white(type="password" name="pass" data-constraints="@Required")
                    .form-group.offset-top-24
                      label.form-label.form-label-outside(for="form-register-confirm-password") Confirm Password:
                      input#form-register-confirm-password.form-control.bg-white(type="password" name="confirmpass" data-constraints="@Required")
                    .offset-top-24
                      button(type="submit").btn.btn-primary.btn-block sign in
                  .offset-top-30
                    p or enter with
                    +widget-list-social([
                      {
                        "icon": "fa fa-facebook",
                        "href": "#"
                      },
                      {
                        "icon": "fa fa-twitter",
                        "href": "#"
                      },
                      {
                        "icon": "fa fa-google-plus",
                        "href": "#"
                      }
                    ])

  // Page Footer
  include ../sections/_section-footer-default
