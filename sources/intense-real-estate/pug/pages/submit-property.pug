extends  ../_skeleton

//- Includes
include ../elements/_ui-google-map
include ../elements/_ui-table-bootstrap
include ../elements/_ui-material-parallax

//-Title
block title
  title= cfg.nav.submit.title

//- Page
block page

  // Page Head
  header.page-head

    //- RD Navbar
    +rd-navbar-top-panel(
    'rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.submit,
    cfg.nav
    )

    //- Section header
    section.context-dark
      +material-parallax({ img: 'images/bg-header-1920x362.jpg' })
        .container.section-top-34.section-md-top-98.section-bottom-34
          div
            h1.font-weight-bold Submit Property
          ul.list-inline.list-inline-dashed.p.text-light.breadcrumb-modern.offset-top-10.offset-md-top-66
            li.list-inline-item.active
              a(href="./") Home
            li.list-inline-item  Submit Property

  // Page Contents
  main.page-content

    //Section The Presidio Residences
    section.section-98.section-md-110
      .container
        h2.font-weight-bold Fill in the Form
        hr.divider.bg-saffron
        form.rd-mailform.text-left.offset-md-top-66(method='post', action='bat/rd-mailform.php' data-form-output='form-output-global')
          .row.grid-group-md
            .col-lg-6
              .form-group
                label.form-label.form-label-size-lg.form-label-outside(for="form-property-title")  Property Title
                input#form-property-title.form-control.bg-white(type="text" name="property_title" data-constraints="@Required")
              .row.grid-group-sm.offset-top-20
                .col-md-6
                  .form-group
                    label.form-label.form-label-size-lg.form-label-outside(for="form-property-location")  Location
                    select.form-control(id="form-property-location" name="property_location")
                      option(value="1") any
                      option(value="2") San Francisco
                      option(value="3") New York
                      option(value="4") Las Vegas
                .col-md-6
                  .form-group
                    label.form-label.form-label-size-lg.form-label-outside(for="form-property-status") Property Status
                    select.form-control(id="form-property-status" name="property_status" )
                      option(value="1") any
                      option(value="2") Sale
                      option(value="3") Rent
                      option(value="4") Commercial

              .form-group.offset-top-20
                label.form-label.form-label-size-lg.form-label-outside(for="form-property-type") Type
                select.form-control(id="form-property-type" name="property_type")
                  option(value="1") any
                  option(value="2") Apartment
                  option(value="3") Office
                  option(value="4") Hotel
              .row.grid-group-sm.offset-top-20
                .col-md-4
                  .form-group
                    label.form-label.form-label-size-lg.form-label-outside(for="form-beds") Beds
                    select.form-control(id="form-beds" name="property_beds")
                      option(value="1") any
                      option(value="2") 1
                      option(value="3") 2
                      option(value="4") 3
                      option(value="5") 4
                .col-md-4
                  .form-group
                    label.form-label.form-label-size-lg.form-label-outside(for="form-baths") Baths
                    select.form-control(id="form-baths" name="property_baths")
                      option(value="1") any
                      option(value="2") 1
                      option(value="3") 2
                      option(value="4") 3
                      option(value="5") 4
                .col-md-4
                  .form-group
                    label.form-label.form-label-size-lg.form-label-outside(for="form-property-price")  Price(USD)
                    input#form-property-price.form-control.bg-white(type="text" name="property_price" data-constraints="@Required")

              .form-group.offset-top-20
                label.form-label.form-label-size-lg.form-label-outside(for="form-property-description") Property Description
                textarea#form-property-description.form-control.bg-white(name="property_description" style="height: 150px;" data-constraints="@Required")


            .col-lg-6
              .form-group
                label.form-label.form-label-size-lg.form-label-outside(for="google-map-address") Address
                .input-group
                  input#google-map-address.form-control(placeholder=holder, type="text", name="address" data-constraints="@Required")
                  span.input-group-append
                    a.btn.btn-primary(href="#") Find Address

              +google-map.mod-2.offset-top-24

          h5.font-weight-bold.offset-top-66 Additional Details
          .additional-fields(data-init-count="1"  data-additional-field='<div class="submit-property-detail offset-top-41 offset-sm-top-20"><div class="row"><div class="col-10 col-md-11"><div class="row grid-group-sm"><div class="col-md-5"><div class="form-group"><label for="form-property-detail-title-$num$" class="form-label form-label-size-lg form-label-outside"> Title </label><input id="form-property-detail-title-$num$" type="text" name="propery_detail_title_$num$" data-constraints="@Required" class="form-control bg-white"></div></div><div class="col-md-7"><div class="form-group"><label for="form-property-detail-value-1" class="form-label form-label-size-lg form-label-outside"> Value </label><input id="form-property-detail-value-1" type="text" name="propery_detail_value_1" data-constraints="@Required" class="form-control bg-white"></div></div></div></div><div class="col-2 col-md-1 text-center offset-top-14 offset-sm-top-10"><a href="#" class="additional-field-remove icon icon-xxs mdi mdi-close text-dark offset-top-41"></a></div></div></div>')
            .additional-fields-wrap
            .row.offset-top-34
              .col-lg-2.col-sm-4
                button.additional-fields-add.btn.btn-default.btn-block Add detail
          hr.bg-lighter
          .row
            .col-lg-3.col-sm-6
              button(type="submit").btn.btn-primary.btn-block submit

  // Page Footer
  include ../sections/_section-footer-default
