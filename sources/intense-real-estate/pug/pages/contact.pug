extends  ../_skeleton

//- Includes
include  ../elements/_ui-tabs-classic
include  ../elements/_ui-material-parallax
include ../elements/_widget-list-social
include ../elements/_ui-google-map

//-Title
block title
  title= cfg.nav.contacts.title

//- Page
block page

  // Page Head
  header.page-head
    //- RD Navbar
    +rd-navbar-top-panel(
    'rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.contacts,
    cfg.nav
    )

    //- Section header
    section.context-dark
      +material-parallax({ img: 'images/bg-header-1920x362.jpg' })
        .container.section-top-34.section-md-top-98.section-bottom-34
          div
            h1.font-weight-bold Contacts
          ul.list-inline.list-inline-dashed.p.text-light.breadcrumb-modern.offset-top-10.offset-md-top-66
            li.list-inline-item.active
              a(href="./") Home
            li.list-inline-item  Contacts

  // Page Contents
  main.page-content

    //Section Contact Info
    section.bg-lighter.section-66
      .container-wide
        .row.justify-content-sm-center.text-md-left
          .col-sm-10.col-md-8.col-lg-12
            .row.justify-content-sm-center
              .col-sm-6.col-lg-3.col-xxl-2
                .unit.unit-spacing-xs.unit-sm.flex-md-row
                  .unit-left
                    span.icon.icon-xs.mdi.mdi-phone.text-primary(style="font-size: 26px")
                  .unit-body
                    h6 Phones
                    .p
                      a.d-block(href="tel:1-800-1234-567") 1-800-1234-567
                      a.d-block(href="tel:1-800-6547-987") 1-800-6547-987
              .col-sm-6.col-lg-3.col-xxl-2.offset-top-50.offset-sm-top-0
                .unit.unit-spacing-xs.unit-sm.flex-md-row
                  .unit-left
                    span.icon.icon-xs.mdi.mdi-email-open.text-primary(style="font-size: 26px")
                  .unit-body
                    h6 E-mail
                    .p
                      a.d-block(href="mailto:info@demolink.org") info@demolink.org
              .col-sm-6.col-lg-3.col-xxl-2.offset-top-50.offset-lg-top-0
                .unit.unit-spacing-xs.unit-sm.flex-md-row
                  .unit-left
                    span.icon.icon-xs.mdi.mdi-map.text-primary(style="font-size: 26px")
                  .unit-body
                    h6 Address
                    address.contact-info 213, New Lenox, Chicago, IL 60606
              .col-sm-6.col-lg-3.col-xxl-2.offset-top-50.offset-lg-top-0
                .unit.unit-spacing-xs.unit-sm.flex-md-row
                  .unit-left
                    span.icon.icon-xs.mdi.mdi-timelapse.text-primary(style="font-size: 26px")
                  .unit-body
                    h6 Open Hours
                    div
                      p 8:00 – 19:00 Mon – Fri
                    p.offset-top-0 9:00 – 17:00 Sat

    //Section Get In Touch
    section.section-98.section-md-110
      .container
        h2.font-weight-bold Get In Touch
        hr.divider.bg-saffron
        .offset-md-top-66
          .row.justify-content-sm-center
            .col-sm-10.col-lg-8
              // RD Mailform
              form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
                .row.justify-content-sm-center.grid-group-sm
                  .col-md-6
                    .form-group
                      label.form-label(for="mailform-first-name") First name
                      input#mailform-first-name.form-control.bg-white(type="text" name="first name" data-constraints="@Required")
                  .col-md-6
                    .form-group
                      label.form-label(for="mailform-last-name") Last Name
                      input#mailform-last-name.form-control.bg-white(type="text" name="last name" data-constraints="@Required")
                  .col-md-6
                    .form-group
                      label.form-label(for="mailform-phone") Phone
                      input#mailform-phone.form-control.bg-white(type="text" name="phone" data-constraints="@Numeric @Required")
                  .col-md-6
                    .form-group
                      label.form-label(for="mailform-email") E-mail
                      input#mailform-email.form-control.bg-white(type="text" name="email" data-constraints="@Email @Required")
                  .col-md-12
                    .form-group
                      label.form-label(for="mailform-message") Message
                      textarea#mailform-message.form-control.bg-white(name="message" data-constraints="@Required")
                .offset-top-24.text-center
                  button(type="submit").btn.btn-primary send message
    section
      +google-map({
        center: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
      }, [{
        location: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.',
        description: '9870 St Vincent Place, Glasgow'
      }]).mod-1

  // Page Footer
  include ../sections/_section-footer-default
